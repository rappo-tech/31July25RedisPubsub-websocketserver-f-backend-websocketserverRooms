generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model AllAdmins {
  id         String        @id @default(uuid())
  adminName  String
  allCategory AllCategory[]
}

model AllCategory {
  id           String        @id @default(uuid())
  adminId      String
  admin        AllAdmins     @relation(fields: [adminId], references: [id], onDelete: Cascade)
  categoryName String
  allProds     AllProds[]
}

model AllProds {
  id         String       @id @default(uuid())
  categoryId String
  category   AllCategory  @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  prodName   String
}
